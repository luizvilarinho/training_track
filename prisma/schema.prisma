generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  name       String
  password   String
  tb_workout tb_workout[]
}

model tb_workout {
  id           Int        @id @default(autoincrement())
  user         tb_user    @relation(fields: [userId], references: [id])
  userId       Int        
  training     tb_group[]
  lastTraining Boolean
  date         DateTime
}

model tb_group {
  id           Int           @id @default(autoincrement())
  type         Int
  description  String
  sets         Int
  tb_workout   tb_workout?   @relation(fields: [tb_workoutId], references: [id])
  tb_workoutId Int
}

model tb_group_type {
  id          Int        @id @default(autoincrement())
  description String
}
